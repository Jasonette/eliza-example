{
  "$jason": {
    "head": {
      "title": "Eliza",
      "actions": {
        "$foreground": {
          "trigger": "reload"
        },
        "$load": {
          "trigger": "reload"
        },
        "reload": {
          "type": "$network.request",
          "options": {
            "url": "https://jeliza.herokuapp.com/messages",
            "method": "get"
          },
          "success": {
            "type": "$render"
          }
        },
        "say": {
          "type": "$network.request",
          "options": {
            "method": "post",
            "url": "https://jeliza.herokuapp.com/messages",
            "data": {
              "text": "{{$get.message}}"
            }
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "style": {
            "border": "none",
            "align": "bottom"
          },
          "sections": [
            {
              "items": {
                "{{#each $jason.messages}}": {
                  "type": "label",
                  "style": {
                    "font": "Courier",
                    "size": "12"
                  },
                  "text": "{{text}}"
                }
              }
            }
          ],
          "footer": {
            "input": {
              "name": "message",
              "right": {
                "action": {
                  "trigger": "say"
                }
              }
            }
          }
        }
      }
    }
  }
}
